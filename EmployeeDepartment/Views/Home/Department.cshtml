@{ 
    ViewBag.Title = "Department";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section scripts {

    <link href="~/Content/CustomStyle.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/angular.js"></script>
    <script src="~/Scripts/Department.js"></script>
}
<div ng-app="departmentModule" id="body">
    <div ng-controller="departmentCtrl">
        <h2>Department</h2>

        <h3>List of Departments</h3>

        <table ng-cloak>
            <thead>
                <tr>
                    <th style="display: none;">ID</th>
                    <th>Name</th>
                    
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                <tr ng-repeat="items in departmentsData">
                    <td hidden="hidden">{{items.Id}}</td>
                    <td>{{items.Name}}</td>

                    <td>
                        <button ng-model="$scope.Department"
                                ng-click="edit(departmentsData[$index])">
                            Edit
                        </button>
                        <button ng-click="delete($index)">Delete</button>
                    </td>
                </tr>
            </tbody>
           
        </table>
        <br />
        <div style="border-top: solid 2px #282828; width: 430px; height: 10px"> </div>

        <div ng-show="Department.Id != '' ">
            <div>
                <h2>Update Department</h2>
            </div>
            <div hidden="hidden">
                <label for="id">Id</label>
                <input type="text" data-ng-model="Department.Id" />
            </div>
            <div>
                <label for="name">Name</label>
                <input type="text" data-ng-model="Department.Name" />
            </div>

           
            <br />
            <div>
                <button data-ng-click="update()">Update</button>
                <button data-ng-click="cancel()">Cancel</button>
            </div>
        </div>

        <div ng-hide="Department.Id != '' ">
            <div>
                <h2>Add New Department</h2>
            </div>
            <div>
                <label for="name">Name</label>
                <input type="text" data-ng-model="Department.Name" />
            </div>

           
            <br />
            <div>
                <button data-ng-click="save()">Save</button>
                <button data-ng-click="clear()">Clear</button>
            </div>
        </div>
    </div>
</div>