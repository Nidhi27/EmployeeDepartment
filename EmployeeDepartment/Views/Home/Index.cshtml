@{
    ViewBag.Title = "Department";

      Layout = "~/Views/Shared/_Layout.cshtml";
}
@section scripts {

    <link href="~/Content/CustomStyle.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/angular.js"></script>
    <script src="~/Scripts/Department.js"></script>
    <script src="~/Scripts/Employee.js"></script>
}
<div ng-app="EmpModule" id="body">
    <div ng-controller="EmpCtrl">
        <h2>Employee</h2>

        <h3>List of Employees</h3>

        <table ng-cloak>
            <thead>
                <tr>
                    <th style="display: none;">ID</th>
                    <th>Name</th>
                    <th> City</th>
                    <th> Department Name</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @*<pre>{{employeesData | json}} </pre>*@
                <tr ng-repeat="items in employeesData">
                    <td hidden="hidden">{{items.Id}}</td>
                    <td>{{items.Name}}</td>
                    <td>{{items.City}}</td>
                    <td>{{items.Department.Name}}</td>
                    <td>
                        <button ng-model="$scope.Employee"
                                ng-click="edit(employeesData[$index])">
                            Edit
                        </button>
                        <button ng-click="delete($index)">Delete</button>
                    </td>
                </tr>
            </tbody>

        </table>
        <br />
        <div style="border-top: solid 2px #282828; width: 430px; height: 10px"> </div>

        <div ng-show="Employee.Id != '' ">
            <div>
                <h2>Update Employee</h2>
            </div>
            <div hidden="hidden">
                <label for="id">Id</label>
                <input type="text" data-ng-model="Employee.Id" />
            </div>
            <div>
                <label for="name">Name</label>
                <input type="text" data-ng-model="Employee.Name" />
            </div>
            <div>
                <label for="name">City</label>
                <input type="text" data-ng-model="Employee.City" />
            </div>
            <div>
                <label for="departmentName">Department Name</label>
                <select data-ng-model="Department.Id">
                    <option ng-repeat="items in departmentsData" value="{{items.Id}}">{{items.Name}}</option>
                </select>
            </div>
            <br />
            <div>
                <button data-ng-click="update()">Update</button>
                <button data-ng-click="cancel()">Cancel</button>
            </div>
        </div>

        <div ng-hide="Employee.Id != '' ">
            <div>
                <h2>Add New Employee</h2>
            </div>
            <div>
                <label for="name">Name</label>
                <input type="text" data-ng-model="Employee.Name" />
            </div>

            <div>
                <label for="name">City</label>
                <input type="text" data-ng-model="Employee.City" />
            </div>
            <div>
                <label for="departmentName">Department Name</label>
                <select data-ng-model="Department.Id">
                    <option ng-repeat="items in departmentsData" value="{{items.Id}}">{{items.Name}}</option>
                </select>

             
            </div>
            <br />
            <div>
                <button data-ng-click="save()">Save</button>
                <button data-ng-click="clear()">Clear</button>
            </div>
        </div>
    </div>
</div>